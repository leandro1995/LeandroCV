<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/contentLinear"
        android:layout_width="@dimen/dimen95"
        android:layout_height="@dimen/dimen110"
        android:layout_marginStart="@dimen/dimen5"
        android:layout_marginEnd="@dimen/dimen5"
        android:background="@drawable/gray_30_background"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/toolImage"
            android:layout_width="@dimen/dimen50"
            android:layout_height="@dimen/dimen50"
            android:adjustViewBounds="true"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/nameToolText"
            style="@style/ItemToolVidalResumeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen5" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>